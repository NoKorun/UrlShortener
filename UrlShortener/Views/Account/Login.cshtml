@model UrlShortener.Models.UserDto
@{
    Layout = "_Layout";
}


<h2>Login</h2>
<!-- Catch bad login --></>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (User.Identity.Name != null && User.Identity.IsAuthenticated)
{
    <p>You are already logged in as @User.Identity.Name</p>
}
else
{
<div class="container mt-4">
    <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
            <label asp-for="UserName">User Name</label>
            <input asp-for="UserName" name="UserName" class="form-control" />
        </div>
            <div class="form-group mb-3">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" name="Password" class="form-control" type="password" />
        </div>
        <div>
            <button type="submit" class="btn btn-primary">Log in</button>
            <a href="/Account/Register" class="btn btn-secondary">Register</a>
        </div>
    </form>
</div>
}