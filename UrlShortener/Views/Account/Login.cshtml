@model UrlShortener.Models.UserDto
@{
    Layout = "_Layout";
}


<h2 class="text-center mt-5 mb-4">Login</h2>
<!-- Catch bad login --></>
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (User.Identity.Name != null && User.Identity.IsAuthenticated)
{
    <p class="fs-4 text-center">You are already logged in as @User.Identity.Name</p>
}
else
{
<div class="container d-flex justify-content-center">
    <div class="w-100" style="max-width: 400px;">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group mb-3">
                <label asp-for="UserName">User Name</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" type="password" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary btn-lg px-4">Log in</button>
                <a href="/Account/Register" class="btn btn-secondary btn-lg px-4">Register</a>
            </div>
        </form>
    </div>
</div>
}