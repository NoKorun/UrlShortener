@{
    Layout = "_Layout";
}
@model UrlShortener.Models.LinkViewModel
@{
    ViewData["Title"] = "My Links";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<div class="container mt-4">
    <h2>Create Short Link</h2>

    <!-- Link short form -->
    <form asp-action="CreateShortLink" asp-controller="LinkWeb" method="post" class="mb-5">
        <div class="form-group mb-3">
            <label asp-for="NewLink.Url" class="control-label fs-4">Original URL</label>
            <input asp-for="NewLink.Url" class="form-control" />
            <span asp-validation-for="NewLink.Url" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg px-4">Shorten</button>
    </form>

    <!-- Shortened links table -->
    <h2>My Shortened Links</h2>
    @if (Model.ExistingLinks.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Original URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                    <th>Date of creation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var link in Model.ExistingLinks)
                {
                    <tr>
                        <td style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" title="@link.Url">
                            <a href="@link.Url" target="_blank" rel="noopener noreferrer" title="@link.Url" style="display: inline-block; max-width: 100%; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                                @link.Url
                            </a>
                        </td>
                        <td><a href="@link.ShortUrl">@link.ShortUrl</a></td>
                        <td>@link.Clicks</td>
                        <td>@link.DateOfCreation</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>You haven't created any short links yet.</p>
    }
</div>